<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border2"
    android:layout_weight="1"
    tools:context="com.wildtree.android.wildtree_ns.MapsActivity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewScript">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:elevation="-10dp"
            android:id="@+id/mapLayout">
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/transparent_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/transparent" />
        </RelativeLayout>

    <LinearLayout
        android:elevation="30dp"

        android:layout_marginTop="250dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/border2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:elevation="30dp"
                android:id="@+id/food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                   android:text="Contact Us"
                    android:textStyle="bold"
                    android:textColorHint="#333"
                    android:paddingTop="20dp"
                    android:id="@+id/user"
                    android:textSize="25dp"
                    android:textColor="@color/primaryColor"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:background="@drawable/border2"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="30dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:paddingLeft="25dp"
                            android:layout_width="250dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:drawableTint="@color/primaryColor"
                            android:drawablePadding="10dp"
                            android:layout_margin="20dp"
                            android:textColorHint="@color/primaryColor"
                            android:singleLine="true"
                            android:hint="Name"
                            android:textColor="@color/primaryColor"
                            android:textSize="12sp"
                            android:inputType="textEmailAddress" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_margin="20dp"
                            android:layout_width="250dp"
                            android:layout_gravity="center"

                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:singleLine="true"
                            android:drawablePadding="10dp"
                            android:paddingLeft="25dp"
                            android:textColor="#7cb342"
                            android:drawableTint="@color/primaryColor"
                            android:hint="Email"
                            android:textSize="12sp"
                            android:inputType="textPassword" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_margin="20dp"
                            android:layout_width="250dp"
                            android:layout_gravity="center"

                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:singleLine="true"
                            android:paddingLeft="25dp"
                            android:drawableTint="@color/primaryColor"
                            android:hint="Message"
                            android:textSize="12sp"
                            android:textColor="#7cb342"
                            android:inputType="textMultiLine" />


                    </android.support.design.widget.TextInputLayout>
                    <Button
                        android:layout_width="150dp"
                        android:layout_gravity="center"
                        android:layout_height="40dp"
                        android:background="@drawable/submit"
                        android:layout_marginTop="20dp"
                        android:text="Submit"
                        android:layout_margin="40dp"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Follow Us On"
                      android:textSize="18dp"
                      android:textColor="@color/primaryColor"
                      android:textStyle="bold"
                      android:gravity="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_height="62dp"
                        android:id="@+id/navBar"
                        android:layout_marginTop="22dp"
                        android:orientation="horizontal"
                        android:weightSum="4">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/zoom_in_xml_animation"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:src="@drawable/fb"
                                android:layout_marginTop="-5dp"
                                android:padding="15dp"/>
                            </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="-5dp"

                            android:gravity="center" >
                            <ImageView
                                android:id="@+id/zoom_in_xml_animation2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:src="@drawable/insta"
                                android:padding="15dp"/>
                            </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/zoom_in_xml_anim"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="-5dp"

                                android:layout_gravity="center"
                                android:src="@drawable/go"
                                android:padding="15dp"/>
                                  </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/zoom_in_xml_animation1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="-5dp"
                                android:layout_gravity="center"
                                android:src="@drawable/twitter"
                                android:padding="9dp"/>
                               </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>